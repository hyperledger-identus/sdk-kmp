CREATE TABLE CredentialMetadata (
    id TEXT NOT NULL PRIMARY KEY,
    nonce TEXT NOT NULL,
    linkSecretName TEXT NOT NULL,
    linkSecretBlindingData TEXT NOT NULL
);

insert:
INSERT INTO CredentialMetadata(id, nonce, linkSecretName, linkSecretBlindingData)
VALUES (:id, :nonce, :linkSecretName, :linkSecretBlindingData);

fetchCredentialMetadata:
SELECT *
FROM CredentialMetadata
WHERE linkSecretName = ?;
